<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
     <LinearLayout android:id="@+id/linearLayout2" android:layout_height="64dp" android:layout_width="match_parent">
        <Button android:layout_height="fill_parent" android:background="@drawable/titlebutton" android:id="@+id/tButtonLogin" android:layout_width="64dp"></Button>
        <Button android:background="@drawable/titlebar" android:layout_height="fill_parent" android:layout_width="match_parent" android:id="@+id/tBarLogin" android:textSize="12pt" android:gravity="left|center_vertical" android:textColor="@color/white" android:text=" PingMe Sign Up"></Button>
    </LinearLayout>

     <TextView
         android:id="@+id/textView1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Fill in the details below"
         android:textAppearance="?android:attr/textAppearanceLarge" />

     <EditText
         android:id="@+id/textNewUser"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:ems="10"
         android:hint="Username" >

         <requestFocus />
     </EditText>

     <EditText
         android:id="@+id/textNewPassword"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:ems="10"
         android:hint="Password"
         android:inputType="textPassword" />

     <EditText
         android:id="@+id/textNewPasswordConfirm"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:ems="10"
         android:hint="Confirm Password"
         android:inputType="textPassword" />

     <EditText
         android:id="@+id/textNewFullName"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:ems="10"
         android:hint="Full name" />

     <EditText
         android:id="@+id/textNewEmail"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:ems="10"
         android:hint="E-mail ID" />

     <EditText
         android:id="@+id/textNewEmergency"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:ems="10"
         android:hint="Emergency phone number"
         android:inputType="phone" />

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content" >

         <Button
             android:id="@+id/bSignUp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_weight="0.36"
             android:text="Sign up" />

         <Button
             android:id="@+id/bClear"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_weight="0.49"
             android:text="Clear" />

     </LinearLayout>

</LinearLayout>