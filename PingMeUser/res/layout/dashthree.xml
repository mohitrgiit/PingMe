<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" 
        >

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    >
        


     <TableRow
         android:id="@+id/tableRow1"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:gravity="center_horizontal" 
         android:padding="5dp">
    
 <Button
         android:id="@+id/buttonPingImage"
         android:layout_width="128dp"
         android:layout_height="128dp"
         android:background="@drawable/images" 
         />
<View android:layout_width="10dip" android:layout_height="1dip"/>
        
     <Button
         android:id="@+id/buttonPingText"
         android:layout_width="128dp"
         android:layout_height="128dp"
         android:background="@drawable/text" />
      </TableRow>

       <TableRow
           android:id="@+id/tableRow2"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:gravity="center_horizontal"
            android:padding="5dp" >
    
		<Button
         android:id="@+id/buttonPingPlace"
         android:layout_width="128dp"
         android:layout_height="128dp"
         android:background="@drawable/places"
          />
<View android:layout_width="10dip" android:layout_height="1dip"/>
     	<Button
         android:id="@+id/buttonPingCode"
         android:layout_width="128dp"
         android:layout_height="128dp"
         android:background="@drawable/code" />
      </TableRow>


       <TableRow
           android:id="@+id/tableRow3"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:gravity="center_horizontal"
            android:padding="5dp" >

           <Button
               android:id="@+id/buttonRefresh"
               android:layout_width="128dp"
               android:layout_height="128dp"
               android:background="@drawable/refresh" />
<View android:layout_width="10dip" android:layout_height="1dip"/>
           <Button
               android:id="@+id/buttonLogOut"
               android:layout_width="128dp"
               android:layout_height="128dp"
               android:background="@drawable/stop" />
       </TableRow>

      </LinearLayout>
</FrameLayout>
</LinearLayout>